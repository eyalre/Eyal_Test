pipeline {
    agent any

    stages {
        stage('Run Python Script') {
            steps {
                script {
                    def pythonScript = "weather_etl.py"

                    // Run the Python script and capture the exit status
                    def status = sh(script: "python3 ${pythonScript}", returnStatus: true)

                    if (status == 0) {
                        echo "Python script executed successfully."
                    } else {
                        error "Python script failed with exit code: ${status}"
                    }
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline finished."
        }
    }
}
